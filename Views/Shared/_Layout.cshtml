                            <input type="email" name="mail" id="orangeForm-email" class="form-control validate" placeholder="Your Email" style="padding-left:30px" required>
                            @*<label data-error="wrong" data-success="right" for="orangeForm-email">Your email</label>*@
                        </div>

                        <div class="md-form mb-8">

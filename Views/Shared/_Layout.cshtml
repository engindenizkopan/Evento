                            <i class="fas fa-map-marked-alt prefix grey-text" style="position:relative; top:32px; font-size:20px; left:5px"></i>
                            <input type="text" name="city" id="orangeForm-name" class="form-control validate" placeholder="Your City" style="padding-left:30px" required>
                            @*<label data-error="wrong" data-success="right" for="orangeForm-name">Your name</label>*@
                        </div>
                        <div class="md-form mb-8">
                            <i class="fas fa-user prefix grey-text" style="position:relative; top:32px; font-size:20px; left:5px"></i>
                            <input type="text" name="username" id="orangeForm-name" class="form-control validate" placeholder="User Name" style="padding-left:30px" required>
